<html>
  <head>
      <title>Quotes.ng</title>
      <style>
        h1, p
        {
          padding : 9px;
        }
        h1{
          font-weight: 300;
        }
        input, textarea, button
        {
          border : 1px solid #BBB;
          padding : 9px;
          min-width : 250px;
          border-radius : 9px;
        }

      </style>

      <body>
        <div>
        <center>
        <form action="/send" method="post">
        <h1>Quotes.ng</h1>
        <p>
          <input type="text" name="name" placeholder="Name" />
        </p>
        <p><textarea name="quote" placeholder="Quotes" > </textarea></p>
        <p><button type="submit">Send</button></p>
      </form>
      </center>
    </div>

      <div class="container">
        <div class="row">
        </div>
        <div class="row">
            <% quotes.map(function(quote){ %>
            <div class="col-md-4 col-md-offset-4">
                <center>

                  <table class="table table-hove  rtable">

                      <tbody id="">
                          <tr>
                              <td><%= quote.name %></td>
                              <td> :</td>
                              <td><%= quote.quote %></td>
                          </tr>
                      </tbody>
                  </table>
                </center>
            </div>
            <% }) %>
        </div>

    </div>
    </body>
  </head>
</html>
